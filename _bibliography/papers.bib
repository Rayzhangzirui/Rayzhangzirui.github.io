@misc{balcerakIndividualizingGliomaRadiotherapy2024,
  title = {Individualizing {{Glioma Radiotherapy Planning}} by {{Optimization}} of {{Data}} and {{Physics-Informed Discrete Loss}}},
  author = {Balcerak, Michal and Weidner, Jonas and Karnakov, Petr and Ezhov, Ivan and Litvinov, Sergey and Koumoutsakos, Petros and Zhang, Ray Zirui and Lowengrub, John S. and Wiestler, Bene and Menze, Bjoern},
  year = {2024},
