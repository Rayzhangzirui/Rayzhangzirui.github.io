  keywords = {Mathematics - Numerical Analysis,Physics - Medical Physics,Quantitative Biology - Quantitative Methods},
  file = {/Users/Ray/Zotero/storage/L8MN9FJZ/Balcerak et al. - 2024 - Individualizing Glioma Radiotherapy Planning by Op.pdf;/Users/Ray/Zotero/storage/T543VYEE/2312.html}
}


@article{liuExplicitsoluteImplicitsolventMolecular2023,
  title = {Explicit-Solute Implicit-Solvent Molecular Simulation with Binary Level-Set, Adaptive-Mobility, and {{GPU}}},
  author = {Liu, Shuang and Zhang, Zirui and Cheng, Hsiao-Bing and Cheng, Li-Tien and Li, Bo},
